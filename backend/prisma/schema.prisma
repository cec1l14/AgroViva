generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model produtor {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  telefone String
  senha    String
  cpf      String   @unique
  foto     String?
  produtos produto[]
}

model Empresario {
  id       Int     @id @default(autoincrement())
  nome     String
  email    String  @unique
  senha    String
  telefone String 
  foto     String?
  cnpj     String  @unique
}

model produto {
  id           Int      @id @default(autoincrement())
  descricao    String
  tipo         String
  imagem       String?
  preco        Float
  validade     String
  cod_produtor Int
  produtor     produtor @relation(fields: [cod_produtor], references: [id])
}
